{
    "name": "tsxgql",
    "version": "1.0.0",
    "description": "Typed GraphQL Queries",
    "keywords": [
        "graphql",
        "typescript",
        "utility"
    ],
    "repository": "git@github.com:rayraegah/tsgql",
    "author": "rayraegah <rayraegah@gmail.com>",
    "license": "GPL-3.0",
    "main": "dist/index.js",
    "jsnext:main": "dist/index.es.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "rollup -c",
        "clean": "rm -rf dist/*",
        "dist": "npm-run-all clean build",
        "format": "prettier --write src/*.ts src/**/*.ts README.md",
        "lint": "tslint --fix src/*.ts src/**/*.ts",
        "test": "jest --maxWorkers=4",
        "test:coverage": "jest --maxWorkers=4 --coverage",
        "prepublish": "npm run dist"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^23.3.10",
        "@types/node": "^10.12.18",
        "@types/webpack-env": "^1.13.6",
        "codecov": "^3.1.0",
        "husky": "^1.3.1",
        "jest": "^23.6.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.15.3",
        "rollup": "^0.68.2",
        "rollup-plugin-typescript2": "^0.18.1",
        "ts-jest": "^23.10.5",
        "ts-node": "^7.0.1",
        "tslib": "^1.9.3",
        "tslint": "^5.12.0",
        "typescript": "^3.5.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run format && git add ."
        }
    },
    "jest": {
        "testRegex": ".*\\.test\\.tsx?$",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "moduleNameMapper": {
            "^app(.*)$": "<rootDir>/src$1"
        },
        "coverageDirectory": "./coverage/",
        "collectCoverage": true,
        "collectCoverageFrom": [
            "<rootDir>/src/*.ts"
        ],
        "automock": false,
        "testEnvironment": "jsdom",
        "testURL": "http://localhost/"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "all",
        "semi": false
    }
}
